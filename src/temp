filterListings = (tag) => {
    let listings = document.querySelectorAll('.listingComponent')
    
    listings.forEach( (item,ind) => {
      if (this.state.tags.length >= 2) {
        if ( (this.state.tags[0] === item.dataset.role && this.state.tags[1] === item.dataset.level) ||
             (this.state.tags[1] === item.dataset.role && this.state.tags[0] === item.dataset.level) ) {
          item.classList.remove('listingOff')
          item.classList.add('listingOn')
        } else {
          item.classList.remove('listingOn')
          item.classList.add('listingOff')
        }
      } else {
        if (tag === item.dataset.role) {
          item.classList.remove('listingOff')
          item.classList.add('listingOn')
        } else if (tag === item.dataset.level) {
          item.classList.remove('listingOff')
          item.classList.add('listingOn')
        } else {
          item.classList.remove('listingOn')
          item.classList.add('listingOff')
        }
      }
    })
  }

  undoFilterListings = (tag) => {
    let listings = document.querySelectorAll('.listingComponent')

    listings.forEach( item => {
      if (tag === item.dataset.role) {
        item.classList.remove('listingOff')
        item.classList.add('listingOn')
      } else {
        item.classList.remove('listingOff')
        item.classList.add('listingOn')
      }
    })
  }